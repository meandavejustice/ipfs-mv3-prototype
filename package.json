{
  "name": "react-chrome-extension-mv3",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ipfs-http-client": "^53.0.1",
    "is-ipfs": "^6.0.2",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "rimraf": "^3.0.2",
    "webpack": "^5.61.0"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "webpack --mode development --devtool cheap-module-source-map ./public/background.js --output-path ./build",
    "postbuild": "cp -r public/*.json build/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "browser": true,
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "webpack-cli": "^4.9.1"
  }
}
